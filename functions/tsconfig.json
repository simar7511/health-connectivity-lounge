
{
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "noImplicitAny": false,
    "strictNullChecks": false  // Add this to handle null/undefined issues
  }
}
